            }
          ]
        },
        "make_objects": {
          "count": 1,
          "expected": {
            "config": {
              "app": {
                "database": {
                  "connection": {
                    "host": "localhost",
                    "timeout": "30s"
                  }
                }
              }
            }
          }
        }
      },
      "meta": {
        "tags": [
          "deep-nesting",
          "dotted-keys",
          "four-levels",
          "extreme"
        ],
        "level": 3,
        "feature": "dotted-keys"
      }
    },
