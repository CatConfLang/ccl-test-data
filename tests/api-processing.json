    },
    {
      "name": "consecutive_section_headers",
      "input": "== First Section ==\n=== Nested Section ===\n==== Deep Section ====\nkey = value",
      "validations": {
        "parse": {
          "count": 4,
          "expected": [
            {
              "key": "",
