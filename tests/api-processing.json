    {
      "name": "spaced_equals_not_section_header",
      "input": "= = spaced equals\n=  = wide spaces\n== Real Header ==\nkey = value",
      "validations": {
        "parse": {
          "count": 4,
          "expected": [
            {
              "key": "",
              "value": "= spaced equals"
            },
            {
              "key": "",
              "value": "= wide spaces"
            },
            {
              "key": "",
              "value": "= Real Header =="
            },
            {
              "key": "key",
              "value": "value"
            }
