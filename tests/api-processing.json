      }
    },
    {
      "name": "section_headers_no_trailing_equals",
      "input": "== Database Config\nhost = localhost\n=== Server Settings\nport = 8080",
      "validations": {
        "parse": {
          "count": 4,
          "expected": [
            {
              "key": "",
