  "tests": [
    {
      "name": "basic_key_value_pairs",
      "input": "name = Alice\nage = 42",
      "validations": {
        "parse": {
          "count": 2,
          "expected": [
            {
              "key": "name",
              "value": "Alice"
            },
            {
              "key": "age",
              "value": "42"
            }
          ]
        }
      },
      "meta": {
        "tags": [
          "function:parse"
        ],
        "level": 1,
        "feature": "core-ccl-parsing"
      }
    },
    {
      "name": "equals_in_values",
      "input": "msg = k=v pairs work fine\npath = /bin/app=prod",
      "validations": {
        "parse": {
          "count": 2,
          "expected": [
            {
              "key": "msg",
              "value": "k=v pairs work fine"
            },
            {
              "key": "path",
              "value": "/bin/app=prod"
            }
          ]
        }
      },
      "meta": {
        "tags": [
          "function:parse"
        ],
        "level": 1,
        "feature": "core-ccl-parsing"
      }
    },
    {
      "name": "whitespace_trimming",
      "input": "  key   =    value with spaces   \nother = normal",
      "validations": {
        "parse": {
          "count": 2,
          "expected": [
            {
              "key": "key",
              "value": "value with spaces"
            },
            {
              "key": "other",
              "value": "normal"
            }
          ]
        }
      },
      "meta": {
        "tags": [
          "function:parse",
          "feature:whitespace"
        ],
        "level": 1,
        "feature": "core-ccl-parsing"
      }
    },
    {
      "name": "multiline_values",
      "input": "description = First line\n  Second line\n  Third line\ndone = yes",
      "validations": {
        "parse": {
          "count": 2,
          "expected": [
            {
              "key": "description",
              "value": "First line\n  Second line\n  Third line"
            },
            {
              "key": "done",
              "value": "yes"
            }
          ]
        }
      },
      "meta": {
        "tags": [
          "function:parse",
          "feature:multiline"
        ],
        "level": 1,
        "feature": "core-ccl-parsing"
      }
    },
    {
      "name": "empty_values",
      "input": "empty =\nother = value",
      "validations": {
        "parse": {
          "count": 2,
          "expected": [
            {
              "key": "empty",
              "value": ""
            },
            {
              "key": "other",
              "value": "value"
            }
          ]
        }
      },
      "meta": {
        "tags": [
          "function:parse",
          "feature:empty-keys"
        ],
        "level": 1,
        "feature": "core-ccl-parsing"
      }
    },
    {
      "name": "nested_structure_parsing",
      "input": "database =\n  host = localhost\n  port = 5432",
      "validations": {
        "parse": {
          "count": 1,
          "expected": [
            {
              "key": "database",
              "value": "\n  host = localhost\n  port = 5432"
            }
          ]
        }
      },
      "meta": {
        "tags": [
          "function:parse"
        ],
        "level": 1,
        "feature": "core-ccl-parsing"
      }
    },
