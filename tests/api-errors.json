{
  "$schema": "./schema.json",
  "suite": "CCL Error Cases (Validation Format)",
  "version": "2.0",
  "description": "Error handling tests - malformed input detection across all levels using validation format",
  "tests": [
    {
      "name": "just_key_error",
      "input": "key",
      "validations": {
        "parse": {
          "error": true,
          "error_message": "end_of_input"
        }
      },
      "meta": {
        "tags": [
          "error",
          "incomplete"
        ],
        "level": 1,
        "feature": "error-handling"
      }
    },
    {
      "name": "whitespace_only_error",
      "input": "   ",
      "validations": {
        "parse": {
          "error": true,
          "error_message": "not_enough_input"
        }
      },
      "meta": {
        "tags": [
          "error",
          "whitespace",
          "empty",
          "proposed"
        ],
        "level": 1,
        "feature": "error-handling"
      }
    },
    {
      "name": "whitespace_only_error_ocaml_reference",
      "input": "   ",
      "validations": {
        "parse": {
          "count": 0,
          "expected": []
        }
      },
      "meta": {
        "tags": [
          "whitespace",
          "empty",
          "success",
          "reference_compliant"
        ],
        "level": 1,
        "feature": "parsing"
      }
    },
    {
      "name": "just_string_error",
      "input": "val",
      "validations": {
        "parse": {
          "error": true,
          "error_message": "not_enough_input"
        }
      },
      "meta": {
        "tags": [
          "error",
          "incomplete"
        ],
        "level": 1,
        "feature": "error-handling"
      }
    },
    {
      "name": "multiline_plain_error",
      "input": "val\n  next",
      "validations": {
        "parse": {
          "error": true,
          "error_message": "not_enough_input"
        }
      },
      "meta": {
        "tags": [
          "error",
          "multiline",
          "incomplete"
        ],
        "level": 1,
        "feature": "error-handling"
      }
    },
    {
      "name": "multiline_plain_nested_error",
      "input": "\nval\n  next",
      "validations": {
        "parse": {
          "error": true,
          "error_message": "end_of_input"
        }
      },
      "meta": {
        "tags": [
          "error",
          "multiline",
          "nested",
          "incomplete"
        ],
        "level": 1,
        "feature": "error-handling"
      }
    }
  ]
}