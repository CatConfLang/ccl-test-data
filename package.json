{
  "name": "ccl-test-data",
  "version": "1.0.0",
  "description": "This directory contains language-agnostic test cases for CCL (Categorical Configuration Language) parsers organized by architectural level.",
  "private": true,
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "validate": "ajv validate -s tests/schema.json -d 'tests/!(schema).json' --verbose",
    "validate:core": "ajv validate -s tests/schema.json -d 'tests/!(schema).json' --verbose",
    "validate:pretty-print": "ajv validate -s tests/schema.json -d 'tests/pretty-print.json' --verbose",
    "docs:stats": "node scripts/collect-stats.mjs",
    "docs:update": "node scripts/update-readme-remark.mjs",
    "docs:check": "node scripts/update-readme-remark.mjs && git diff --exit-code README.md",
    "docs:schema": "node scripts/generate-schema-docs.mjs",
    "test": "npm run validate && npm run docs:check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "fast-json-patch": "^3.1.1"
  },
  "overrides": {
    "fast-json-patch": "^3.1.1"
  },
  "dependencies": {
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-select": "^5.1.0",
    "unist-util-visit": "^5.0.0"
  }
}
