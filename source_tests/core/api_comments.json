{
  "$schema": "../../schemas/source-format.json",
  "tests": [
    {
      "name": "comment_extension",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "/",
              "value": "This is an environment section"
            },
            {
              "key": "port",
              "value": "8080"
            },
            {
              "key": "serve",
              "value": "index.html"
            },
            {
              "key": "/",
              "value": "Database section"
            },
            {
              "key": "mode",
              "value": "in-memory"
            },
            {
              "key": "connections",
              "value": "16"
            }
          ]
        },
        {
          "function": "filter",
          "expect": [
            {
              "key": "port",
              "value": "8080"
            },
            {
              "key": "serve",
              "value": "index.html"
            },
            {
              "key": "mode",
              "value": "in-memory"
            },
            {
              "key": "connections",
              "value": "16"
            }
          ]
        }
      ],
      "features": [
        "comments"
      ],
      "inputs": [
        "/= This is an environment section\nport = 8080\nserve = index.html\n/= Database section\nmode = in-memory\nconnections = 16"
      ]
    },
    {
      "name": "comment_syntax_slash_equals",
      "tests": [
        {
          "function": "filter",
          "expect": []
        },
        {
          "function": "parse",
          "expect": [
            {
              "key": "/",
              "value": "this is a comment"
            }
          ]
        }
      ],
      "features": [
        "comments"
      ],
      "inputs": [
        "/= this is a comment"
      ]
    },
    {
      "name": "section_headers_with_comments",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "",
              "value": "= Database Config =="
            },
            {
              "key": "/",
              "value": "Connection settings"
            },
            {
              "key": "host",
              "value": "localhost"
            },
            {
              "key": "",
              "value": "== Cache Config ==="
            },
            {
              "key": "/",
              "value": "Redis configuration"
            },
            {
              "key": "port",
              "value": "6379"
            }
          ]
        },
        {
          "function": "filter",
          "expect": [
            {
              "key": "",
              "value": "= Database Config =="
            },
            {
              "key": "host",
              "value": "localhost"
            },
            {
              "key": "",
              "value": "== Cache Config ==="
            },
            {
              "key": "port",
              "value": "6379"
            }
          ]
        }
      ],
      "features": [
        "comments",
        "empty_keys"
      ],
      "inputs": [
        "== Database Config ==\n/= Connection settings\nhost = localhost\n=== Cache Config ===\n/= Redis configuration\nport = 6379"
      ]
    }
  ]
}
