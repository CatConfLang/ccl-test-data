{
  "$schema": "../../schemas/source-format.json",
  "tests": [
    {
      "name": "basic_key_value_pairs",
      "input": "name = Alice\nage = 42",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "name",
              "value": "Alice"
            },
            {
              "key": "age",
              "value": "42"
            }
          ]
        }
      ]
    },
    {
      "name": "equals_in_values",
      "input": "msg = k=v pairs work fine\npath = /bin/app=prod",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "msg",
              "value": "k=v pairs work fine"
            },
            {
              "key": "path",
              "value": "/bin/app=prod"
            }
          ]
        }
      ]
    },
    {
      "name": "whitespace_trimming",
      "input": "  key   =    value with spaces   \nother = normal",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "key",
              "value": "value with spaces"
            },
            {
              "key": "other",
              "value": "normal"
            }
          ]
        }
      ],
      "features": [
        "whitespace"
      ]
    },
    {
      "name": "multiline_values",
      "input": "description = First line\n  Second line\n  Third line\ndone = yes",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "description",
              "value": "First line\n  Second line\n  Third line"
            },
            {
              "key": "done",
              "value": "yes"
            }
          ]
        }
      ],
      "features": [
        "multiline"
      ]
    },
    {
      "name": "empty_values",
      "input": "empty =\nother = value",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "empty",
              "value": ""
            },
            {
              "key": "other",
              "value": "value"
            }
          ]
        }
      ],
      "features": [
        "empty_keys"
      ]
    },
    {
      "name": "nested_structure_parsing",
      "input": "database =\n  host = localhost\n  port = 5432",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "database",
              "value": "\n  host = localhost\n  port = 5432"
            }
          ]
        }
      ]
    },
    {
      "name": "unicode_parsing",
      "input": "emoji = ğŸ˜€ğŸ˜ƒğŸ˜„\né…ç½® = config",
      "tests": [
        {
          "function": "parse",
          "expect": [
            {
              "key": "emoji",
              "value": "ğŸ˜€ğŸ˜ƒğŸ˜„"
            },
            {
              "key": "é…ç½®",
              "value": "config"
            }
          ]
        }
      ],
      "features": [
        "unicode"
      ]
    },
    {
      "name": "empty_input",
      "input": "",
      "tests": [
        {
          "function": "parse",
          "expect": []
        }
      ]
    }
  ]
}
